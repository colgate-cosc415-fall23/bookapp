<%= form_with model: @review, url: book_reviews_path(@book), method: :post do |f| %>
  <div class="field">
    <%= f.label :stars, "Stars" %>
    <%= f.number_field :stars, :in => 1..5 %>
  </div>
  <div class="field">
    <%= f.label :review, "Review" %>
    <%= f.text_field :review %>
  </div>
  <br>
  <%= f.submit "Submit review" %>
  <br>
<% end %>

<%= link_to 'Back to book details', book_path(@book) %>
