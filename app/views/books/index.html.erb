<section>
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Title
        <th>Publisher
        <th>Release year
        <th>Pages
        <th>Price
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book) %>
        <td><%= book.publisher %>
        <td><%= book.year %>
        <td><%= book.pages %>
        <td><%= book.list_price %>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to "Create new book", new_book_path, class: "btn btn-secondary" %>
  </div>
</section>
